{
  "name": "@bonassa/api",
  "version": "1.0.0",
  "scripts": {
    "dev": "pnpm run env:load -- tsx watch src/http/server.ts",
    "build": "tsup",
    "start": "node dist/http/server.js",
    "db:migrate": "pnpm env:load -- prisma migrate dev",
    "db:studio": "pnpm env:load -- prisma studio",
    "env:load": "dotenv -e ../../.env"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@bonassa/auth": "workspace:*",
    "@bonassa/env": "workspace:*",
    "@fastify/cors": "^9.0.1",
    "@fastify/jwt": "^8.0.0",
    "@fastify/swagger": "^8.15.0",
    "@fastify/swagger-ui": "^3.0.0",
    "@prisma/client": "5.19.1",
    "bcryptjs": "^2.4.3",
    "fastify": "^4.28.1",
    "fastify-plugin": "^5.0.0",
    "fastify-type-provider-zod": "^2.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@bonassa/eslint-config": "workspace:*",
    "@bonassa/prettier": "workspace:*",
    "@bonassa/typescript": "workspace:*",
    "@faker-js/faker": "^9.0.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^22.5.4",
    "dotenv-cli": "^7.4.2",
    "prisma": "^5.19.1",
    "tsup": "^8.3.5",
    "tsx": "^4.19.0"
  },
  "prettier": "@bonassa/prettier",
  "eslintConfig": {
    "extends": [
      "@bonassa/eslint-config/node"
    ]
  }
}